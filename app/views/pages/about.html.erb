<div class="about-page-head">
  <div class="container">
    <div class="h2"><%= @titles['about_company'][0]['title'] %></div>
  </div>
</div>
<div class="about-page-background">
  <div class="about-page-background__wrapper">
    <video class="home-hero__background" autoplay="true" muted="muted" loop="true" playsinline="playsinline">
      <source src="/assets/video/about.mp4" type="video/mp4"/>
      <source src="/assets/video/about.webm" type="video/webm"/>
    </video>
  </div>
</div>
<div class="about-page-section about-page-section__title">
  <div class="container">
    <div class="about-page-title"><%= @titles['about_desc'][0]['title'] %></div>
  </div>
</div>
<div class="about-page-section about-page-section__mission">
  <div class="container">
    <div class="about-page-mission">
      <div class="about-page-mission__left">
        <%= @titles['mission'][0]['title'] %>
      </div>
      <div class="about-page-mission__right">
        <%= @titles['mission_desc'][0]['title'] %>
      </div>
    </div>
  </div>
</div>
<div class="about-page-section about-page-section__slide-titles">
  <div class="about-page-slide-titles">
    <div class="about-page-slide-titles__item about-page-slide-titles__item_01"><%= @titles['quality'][0]['title'] %></div>
    <div class="about-page-slide-titles__item about-page-slide-titles__item_02"><%= @titles['fast'][0]['title'] %></div>
    <div class="about-page-slide-titles__item about-page-slide-titles__item_03"><%= @titles['in_touch'][0]['title'] %></div>
  </div>
</div>
<div class="about-page-section about-page-section__text">
  <div class="container">
    <div class="about-page-text">
      <%= @titles['about_text'][0]['title'] %>
    </div>
  </div>
</div>
<div class="about-page-section about-page-section__info">
  <div class="container">
    <div class="info-block about-page-info-block about-page-info-block_01">
      <div class="info-block__image-wrapper">
        <div class="info-block__image">
          <img src="/assets/about/image-01.jpg" alt="" srcset="/assets/about/image-01.jpg 1x, /assets/about/image-01@2x.jpg 2x"/>
        </div>
      </div>
    </div>
    <div class="info-block about-page-info-block about-page-info-block_02">
      <div class="info-block__caption">
        <div class="info-block__divider"></div>
        <div class="info-block__title"><%= @titles['advantages'][0]['title'] %></div>
        <div class="info-block__text">
          <%= @titles['advantages_desc'][0]['title'] %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="about-page-section about-page-section__image">
  <div class="about-page-image">
    <img src="/assets/about/image-02.jpg" alt="" srcset="/assets/about/image-02.jpg 1x, /assets/about/image-02@2x.jpg 2x"/>
  </div>
</div>
<div class="about-page-section about-page-section__command">
  <div class="about-page-command">
    <div class="container">
      <div class="about-page-command__title">
        <%= @titles['command_title'][0]['title'] %>
      </div>
    </div>

    <div class="about-page-command__outer">
      <% @command.each do |item| %>
        <div class="about-page-command-item">
          <div class="about-page-command-item__caption">
            <div class="about-page-command-item__name"><%= item.person %></div>
            <div class="about-page-command-item__post"><%= item.desc %></div>
          </div>
          <div class="about-page-command-item__image">
            <% if item.image.attached? %>
              <img src="<%= url_for(item.image) %>" alt="" style="max-width: 95%; height: auto;"/>
            <% elsif !item.base_image_url.blank? %>
              <img src="/<%= url_for(item.base_image_url) %>" alt=""/>
            <% else %>
              <img src="/assets/placeholder.png" alt=""/>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
