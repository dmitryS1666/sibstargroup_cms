<div class="popup" id="popup-email-us">
  <div class="popup__container">
    <div class="popup__close"><img src="assets/icons/close.svg" alt=""/></div>
    <form class="form form_email-us" id="form-email-us" action="#">
      <div class="h2 popup__h2"><%= @general['write_us'][0]['text'] %></div>
      <div class="form__row">
        <div class="form__col">
          <div class="form__field">
            <label class="form__label" for="email-us-name"><%= @general['you_name'][0]['text'] %><sup>*</sup></label>
            <input class="form__input" id="email-us-name" type="text" placeholder="<%= @general['you_name_hint'][0]['text'] %>" name="name" required="required"/>
            <div class="form__error" data-type="required"><%= @general['required'][0]['text'] %></div>
          </div>
        </div>
        <div class="form__col">
          <div class="form__field">
            <label class="form__label" for="email-us-email"><%= @general['email'][0]['text'] %><sup>*</sup></label>
            <input class="form__input" id="email-us-email" type="text" placeholder="<%= @general['email_hint'][0]['text'] %>" name="email" required="required"/>
            <div class="form__error" data-type="required"><%= @general['required'][0]['text'] %></div>
            <div class="form__error" data-type="email">Email введен некорректно</div>
          </div>
        </div>
        <div class="form__col">
          <div class="form__field">
            <label class="form__label" for="email-us-message"><%= @general['info'][0]['text'] %><sup>*</sup></label>
            <textarea class="form__textarea" id="email-us-message" placeholder="<%= @general['info_hint'][0]['text'] %>" name="message" required="required"></textarea>
            <div class="form__error" data-type="required"><%= @general['required'][0]['text'] %></div>
          </div>
        </div>
      </div>
      <button class="button button_primary form__submit" type="submit">
        <%= @buttons['order'][0]['title'] %>
      </button>
    </form>
    <div class="form-success">
      <div class="h2 form-success__h2">Успешно отправлено!</div>
      <p class="form-success__text">Ваше сообщение было доставлено, в скоре мы свяжемся с Вами.</p>
    </div>
  </div>
</div>
