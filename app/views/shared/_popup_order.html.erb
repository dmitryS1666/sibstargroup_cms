<%# coal_names = [ 'ДПК(фр. 50-200)', 'ДО (фр. 25-50)', 'ДОМСШ (фр. 0-50)', 'ТОМСШ (фр. 0-50)', 'Г (фр. 0-50)' ] %>

<div class="popup" id="popup-order">
  <div class="popup__container">
    <div class="popup__close"><img src="assets/icons/close.svg" alt=""/></div>
    <form class="form form-step" id="form-order" action="#">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-step-navigation"></div>
      <div class="form-step__item">
        <div class="h2 popup__h2"><%= @buttons['coal_select'][0]['title'] %></div>
        <div class="form-step__content">
          <div class="form__field">
            <label class="form__label" for="order__coal-name"><%= @buttons['coal_type'][0]['title'] %></label>
            <select class="form__select" id="order__coal-name" name="coal_name">
              <option value="ДПК(фр. 50-200)" selected="selected">ДПК(фр. 50-200)</option>
              <option value="ДО (фр. 25-50)">ДО (фр. 25-50)</option>
              <option value="ДОМСШ (фр. 0-50)">ДОМСШ (фр. 0-50)</option>
              <option value="ТОМСШ (фр. 0-50)">ТОМСШ (фр. 0-50)</option>
              <option value="Г (фр. 0-50)">Г (фр. 0-50)</option>
            </select>
          </div>
        </div>
        <div class="form__field" id="order__basis-supply">
          <div class="form__label"><%= @titles['supply_basic'][0]['title'] %></div>
          <div class="form-radio__list">
            <label class="form-radio">
              <input class="form-radio__input" type="radio" name="basis_supply" value="FOB (FREE on Board)" checked="checked"/>
              <div class="form-radio__icon"></div>
              <div class="form-radio__text">FOB (FREE on Board)</div>
            </label>
            <label class="form-radio">
              <input class="form-radio__input" type="radio" name="basis_supply" value="DAP (Delivery at Point)"/>
              <div class="form-radio__icon"></div>
              <div class="form-radio__text">DAP (Delivery at Point)</div>
            </label>
            <label class="form-radio">
              <input class="form-radio__input" type="radio" name="basis_supply" value="CFR (Cost and freight)"/>
              <div class="form-radio__icon"></div>
              <div class="form-radio__text">CFR (Cost and freight)</div>
            </label>
          </div>
        </div>
      </div>
      <div class="form-step__item form-step__item_02">
        <div class="h2 popup__h2"><%= @titles['supply'][0]['title'] %></div>
        <div class="form__row">
          <div class="form__col">
            <div class="form__field order__delivery-direction">
              <label class="form__label" for="order__delivery-direction"><%= @buttons['delivery_direction'][0]['title'] %></label>
              <select class="form__select" id="order__delivery-direction" name="delivery_direction" required="required">
                <option value="China" selected="selected"><%= @buttons['china'][0]['title'] %></option>
                <option value="Turkey"><%= @buttons['turkey'][0]['title'] %></option>
              </select>
            </div>
          </div>
          <div class="form__field order__destination-station form__field_hide form__col">
            <label class="form__label" for="order__destination-station_china"><%= @buttons['station'][0]['title'] %>
              *</label>
            <select class="form__select" id="order__destination-station_china" name="destination_station_china">
              <option value="Тунцзянь" selected="selected">Тунцзянь</option>
              <option value="Суйфэнхэ">Суйфэнхэ</option>
              <option value="Хунчунь">Хунчунь</option>
              <option value="Фуюань">Фуюань</option>
              <option value="Хэйхе">Хэйхе</option>
            </select>
          </div>
          <div class="form__field order__destination-station form__field_hide form__col">
            <label class="form__label" for="order__destination-station_turkey"><%= @buttons['station'][0]['title'] %>
              *</label>
            <select class="form__select" id="order__destination-station_turkey" name="destination_station_turkey">
              <option value="Самсун" selected="selected">Самсун</option>
              <option value="Мерсин">Мерсин</option>
              <option value="Искендерун">Искендерун</option>
              <option value="Трабзон">Трабзон</option>
            </select>
          </div>
          <div class="form__col">
            <div class="form__field">
              <label class="form__label" for="order__count"><%= @buttons['order_count'][0]['title'] %>*</label>
              <input class="form__input" id="order__count" type="number" placeholder="140" min="70" step="70" name="count" required="required"/>
            </div>
          </div>
        </div>
      </div>
      <div class="form-step__item form-step__item_03">
        <div class="h2 popup__h2"><%= @titles['contact_info'][0]['title'] %></div>
        <div class="form__row">
          <div class="form__col">
            <div class="form__field">
              <label class="form__label" for="order__name"><%= @titles['you_name'][0]['title'] %></label>
              <input class="form__input" id="order__name" type="text" placeholder="<%= @titles['you_name_hint'][0]['title'] %>" name="name"/>
            </div>
          </div>
          <div class="form__col">
            <div class="form__field">
              <label class="form__label" for="order__organization"><%= @titles['org'][0]['title'] %></label>
              <input class="form__input" id="order__organization" type="text" placeholder="<%= @titles['org_hint'][0]['title'] %>" name="organization"/>
            </div>
          </div>
          <div class="form__col">
            <div class="form__field">
              <label class="form__label" for="order__email"><%= @titles['email'][0]['title'] %>*</label>
              <input class="form__input" id="order__email" type="text" placeholder="<%= @titles['email_hint'][0]['title'] %>" name="email" required="required"/>
            </div>
          </div>
          <div class="form__col">
            <div class="form__field">
              <label class="form__label" for="order__price"><%= @titles['dream'][0]['title'] %>*</label>
              <input class="form__input" id="order__price" type="text" placeholder="1700000" name="price" required="required"/>
            </div>
          </div>
          <div class="form__col">
            <div class="form__field">
              <label class="form__label" for="order__phone"><%= @titles['phone'][0]['title'] %>*</label>
              <input class="form__input" id="order__phone" type="text" placeholder="<%= @titles['phone_hint'][0]['title'] %>" name="phone" required="required"/>
            </div>
          </div>
          <div class="form__col">
            <div class="form__field">
              <label class="form__label" for="order__message"><%= @titles['info'][0]['title'] %></label>
              <textarea class="form__textarea" id="order__message" placeholder="<%= @titles['info_hint'][0]['title'] %>" name="message"></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="form-step__buttons">
        <button class="button button_outline form-step__prev" type="button"><%= @buttons['back'][0]['title'] %></button>
        <button class="button button_primary form-step__next" type="button"><%= @buttons['next'][0]['title'] %></button>
        <button class="button button_primary form-step__submit" type="submit">
          <%= @buttons['order'][0]['title'] %>
        </button>
      </div>
    </form>
    <div class="form-success">
      <div class="h2 form-success__h2"><%= @titles['success'][0]['title'] %></div>
      <p class="form-success__text"><%= @titles['success_desc'][0]['title'] %></p>
    </div>
  </div>
</div>
