<% items = @coal_grade_items.where(coal_grade_id: grade.id) %>
<div class="home-coal-sales-accordion">
  <div class="home-coal-sales-accordion__head">
    <div class="home-coal-sales-accordion__title"><%= grade.name %></div>
    <div class="home-coal-sales-accordion__icon"></div>
  </div>
  <div class="home-coal-sales-accordion__body">
    <table class="home-coal-sales-table">
      <% items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.value %></td>
        </tr>
      <% end %>
    </table>
    <div class="home-coal-sales__buttons">
      <% if grade.pdf_file.attached? %>
        <a class="button button_outline button_invert" href="<%= main_app.rails_blob_path(grade.pdf_file) %>" target="_blank">Скачать <%= grade.name %></a>
      <% end %>
      <a class="button button_primary button_invert popup-open" href="#popup-order">Купить уголь</a>
    </div>
  </div>
</div>